{
  "compilerOptions": {
    "target": "ES2018",
    "useDefineForClassFields": true,
    "module": "ES2015",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}